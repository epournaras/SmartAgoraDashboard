                <div class="col-xs-4">
                    <button onclick="register()" class="btn btn-primary btn-block btn-flat" disabled="true" id="registerButton">Register</button>
                </div>
                <!-- /.col -->
            </div>


            @*<div class="social-auth-links text-center">
